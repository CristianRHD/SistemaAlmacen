        </div>

        <div class="kpi-card">
            <div class="kpi-header">
                <div class="icon-box icon-purple">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="8" y1="6" x2="21" y2="6"></line><line x1="8" y1="12" x2="21" y2="12"></line><line x1="8" y1="18" x2="21" y2="18"></line><line x1="3" y1="6" x2="3.01" y2="6"></line><line x1="3" y1="12" x2="3.01" y2="12"></line><line x1="3" y1="18" x2="3.01" y2="18"></line></svg>
                </div>
                <span class="kpi-label">Categorías</span>
            </div>
            <div class="kpi-body">
                <h3 class="kpi-value">@totalCategorias</h3>
                <span class="kpi-trend">Activas</span>
            </div>
        </div>

        <div class="kpi-card">
            <div class="kpi-header">
                <div class="icon-box icon-green">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                </div>
                <span class="kpi-label">Proveedores</span>
            </div>
            <div class="kpi-body">
                <h3 class="kpi-value">@totalProveedores</h3>
                <span class="kpi-trend positive">Registrados</span>
            </div>
        </div>

        <div class="kpi-card @(productosStockBajo > 0 ? "alert-mode" : "")">
            <div class="kpi-header">
                <div class="icon-box icon-red">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path><line x1="12" y1="9" x2="12" y2="13"></line><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>
                </div>
                <span class="kpi-label">Stock Bajo</span>
            </div>
            <div class="kpi-body">
                <h3 class="kpi-value">@productosStockBajo</h3>
                @if (productosStockBajo > 0)
                {
                    <span class="kpi-trend negative">¡Atención requerida!</span>
                }
                else
                {
                    <span class="kpi-trend positive">Todo en orden</span>
                }
