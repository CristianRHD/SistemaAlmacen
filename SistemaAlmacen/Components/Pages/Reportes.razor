@page "/reportes"
@attribute [Authorize(Roles = "Admin,Gerente,Analista")]
@rendermode InteractiveServer
@using SistemaAlmacen.Models
@using SistemaAlmacen.Data
@using Microsoft.EntityFrameworkCore
@using ClosedXML.Excel
@using System.IO
@using Microsoft.AspNetCore.Authorization
@inject ApplicationDbContext Context
@inject IJSRuntime JS
@inject IWebHostEnvironment Environment

<DialogModal @ref="DialogRef" />

<PageTitle>Reportes - AlmaTrack</PageTitle>

<script>
    window.descargarSinVentanas = (url) => {
        const iframe = document.createElement('iframe');
        iframe.style.display = 'none';
        iframe.src = url;
        document.body.appendChild(iframe);
        setTimeout(() => { document.body.removeChild(iframe); }, 60000);
    }
</script>

<div style="max-width: 1400px; margin: 0 auto; padding: 20px;">

    <div style="background: linear-gradient(135deg, #1b5cc6 0%, #0653fb 100%); border-radius: 20px; padding: 30px; margin-bottom: 30px; box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3); display: flex; justify-content: space-between; align-items: center;">
        <div style="display: flex; align-items: center; gap: 20px;">
            <div style="background: white; border-radius: 15px; padding: 15px; width: 70px; height: 70px; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
                <svg width="40" height="40" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <linearGradient id="reportGrad" x1="0%" y1="100%" x2="0%" y2="0%">
                            <stop offset="0%" style="stop-color:#1162e4;stop-opacity:1" />
                            <stop offset="100%" style="stop-color:#1965c1;stop-opacity:1" />
                        </linearGradient>
                    </defs>
                    <rect x="15" y="60" width="15" height="30" fill="url(#reportGrad)" rx="3" />
                    <rect x="35" y="45" width="15" height="45" fill="url(#reportGrad)" rx="3" />
                    <rect x="55" y="30" width="15" height="60" fill="url(#reportGrad)" rx="3" />
                    <rect x="75" y="20" width="15" height="70" fill="url(#reportGrad)" rx="3" />
                    <path d="M 20 65 L 42 50 L 62 35 L 82 25" stroke="#4caf50" stroke-width="3" fill="none" stroke-linecap="round" />
                    <circle cx="20" cy="65" r="4" fill="#4caf50" />
                    <circle cx="42" cy="50" r="4" fill="#4caf50" />
                    <circle cx="62" cy="35" r="4" fill="#8bc34a" />
                    <circle cx="82" cy="25" r="4" fill="#8bc34a" />
                </svg>
            </div>
            <div style="color: white;">
                <h1 style="margin: 0; font-size: 2.2rem; font-weight: 800;">Reportes de Inventario</h1>
                <p style="margin: 5px 0 0 0; opacity: 0.95; font-size: 1rem; font-weight: 500;">Análisis y exportación de datos</p>
            </div>
        </div>

        <div style="display: flex; flex-direction: column; gap: 10px;">
            <button @onclick="GenerarExcel" disabled="@cargando"
                    style="background: rgba(255,255,255,0.2); backdrop-filter: blur(10px); border: 2px solid rgba(255,255,255,0.5); color: white; padding: 12px 28px; border-radius: 12px; font-weight: 700; cursor: pointer; opacity: @(cargando ? 0.7 : 1); min-width: 200px; transition: all 0.3s; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
                @if (cargando)
                {
                    <span>⏳ Generando...</span>
                }
                else if (urlDescarga != null)
                {
                    <span>🔄 Generar Nuevo</span>
                }
                else
                {
                    <span>📊 Exportar Excel</span>
                }
            </button>

            @if (!string.IsNullOrEmpty(urlDescarga))
            {
                <button @onclick="IniciarDescarga"
                        style="background: #ffffff; color: #3b82f6; padding: 10px 28px; border: none; border-radius: 12px; font-weight: 800; cursor: pointer; box-shadow: 0 4px 15px rgba(0,0,0,0.1); transition: all 0.3s; animation: slideDown 0.3s ease;">
                    ⬇️ Descargar Archivo
                </button>
            }
        </div>
    </div>

    @if (cargandoDatos)
    {
        <div style="text-align: center; padding: 80px; background: white; border-radius: 20px; box-shadow: 0 4px 20px rgba(0,0,0,0.05);">
            <div style="font-size: 4rem; margin-bottom: 20px; animation: spin 2s linear infinite;">⏳</div>
            <p style="font-size: 1.3rem; color: #64748b; font-weight: 600;">Cargando reporte...</p>
        </div>
    }
    else
    {
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-bottom: 30px;">
            <div style="background: white; padding: 30px; border-radius: 20px; box-shadow: 0 4px 20px rgba(0,0,0,0.05); border-left: 5px solid #3b82f6; position: relative; overflow: hidden; transition: transform 0.3s;">
                <div style="position: absolute; top: 15px; right: 15px; opacity: 0.1; font-size: 4rem;">📦</div>
                <div style="position: relative; z-index: 1;">
                    <div style="color: #64748b; font-size: 0.9rem; font-weight: 700; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px;">Total Productos</div>
                    <div style="font-size: 3rem; font-weight: 800; color: #085feb; line-height: 1;">@productosFiltrados.Count</div>
                    <div style="margin-top: 10px; padding-top: 10px; border-top: 2px solid #f1f5f9;">
                        <span style="font-size: 0.85rem; color: #94a3b8;">En selección actual</span>
                    </div>
                </div>
            </div>

            <div style="background: white; padding: 30px; border-radius: 20px; box-shadow: 0 4px 20px rgba(0,0,0,0.05); border-left: 5px solid #097350; position: relative; overflow: hidden; transition: transform 0.3s;">
                <div style="position: absolute; top: 15px; right: 15px; opacity: 0.1; font-size: 4rem;">✅</div>
                <div style="position: relative; z-index: 1;">
                    <div style="color: #64748b; font-size: 0.9rem; font-weight: 700; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px;">Estado Óptimo</div>
                    <div style="font-size: 3rem; font-weight: 800; color: #093f2d; line-height: 1;">@productosFiltrados.Count(p => p.Stock > p.StockMinimo)</div>
                    <div style="margin-top: 10px; padding-top: 10px; border-top: 2px solid #f1f5f9;">
                        <span style="font-size: 0.85rem; color: #94a3b8;">Stock saludable</span>
                    </div>
                </div>
            </div>

            <div style="background: white; padding: 30px; border-radius: 20px; box-shadow: 0 4px 20px rgba(0,0,0,0.05); border-left: 5px solid #ef4444; position: relative; overflow: hidden; transition: transform 0.3s;">
                <div style="position: absolute; top: 15px; right: 15px; opacity: 0.1; font-size: 4rem;">⚠️</div>
                <div style="position: relative; z-index: 1;">
                    <div style="color: #64748b; font-size: 0.9rem; font-weight: 700; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px;">Bajo Stock</div>
                    <div style="font-size: 3rem; font-weight: 800; color: #ef4444; line-height: 1;">@productosFiltrados.Count(p => p.Stock <= p.StockMinimo)</div>
                    <div style="margin-top: 10px; padding-top: 10px; border-top: 2px solid #f1f5f9;">
                        <span style="font-size: 0.85rem; color: #94a3b8;">Requieren reposición</span>
                    </div>
                </div>
            </div>

            <div style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); padding: 30px; border-radius: 20px; box-shadow: 0 4px 20px rgba(245, 158, 11, 0.3); position: relative; overflow: hidden; transition: transform 0.3s; color: white;">
                <div style="position: absolute; top: 15px; right: 15px; opacity: 0.2; font-size: 4rem;">💰</div>
                <div style="position: relative; z-index: 1;">
                    <div style="font-size: 0.9rem; font-weight: 700; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px; opacity: 0.95;">Valor Inventario</div>
                    <div style="font-size: 2.5rem; font-weight: 800; line-height: 1;">RD$@productosFiltrados.Sum(p => p.Stock * p.PrecioCompra).ToString("N2")</div>
                    <div style="margin-top: 10px; padding-top: 10px; border-top: 2px solid rgba(255,255,255,0.3);">
                        <span style="font-size: 0.85rem; opacity: 0.9;">Costo en selección actual</span>
                    </div>
                </div>
            </div>
        </div>

        <div style="background: white; border-radius: 20px; padding: 30px; box-shadow: 0 4px 20px rgba(0,0,0,0.05); margin-bottom: 25px;">
            <h3 style="margin: 0 0 20px 0; color: #334155; font-size: 1.3rem; display: flex; align-items: center; gap: 10px;">
                <span style="font-size: 1.8rem;">🔍</span>
                Filtros de Búsqueda
            </h3>

            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">

                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 700; color: #64748b; font-size: 0.9rem;">Categoría</label>
                    <select @bind="categoriaSeleccionada" style="width: 100%; padding: 12px; border: 2px solid #e2e8f0; border-radius: 10px; cursor: pointer; font-size: 0.95rem; color: #475569;">
                        <option value="0">🏷️ Todas las categorías</option>
                        @foreach (var cat in categorias)
                        {
                            <option value="@cat.Id">@cat.Nombre</option>
                        }
                    </select>
                </div>

                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 700; color: #64748b; font-size: 0.9rem;">Estado Stock</label>
                    <select @bind="filtroStock" style="width: 100%; padding: 12px; border: 2px solid #e2e8f0; border-radius: 10px; cursor: pointer; font-size: 0.95rem; color: #475569;">
                        <option value="">📊 Todos los niveles</option>
                        <option value="bajo">⚠️ Bajo Stock</option>
                        <option value="sin">❌ Sin Stock</option>
                        <option value="normal">✅ Stock Normal</option>
                    </select>
                </div>

                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 700; color: #64748b; font-size: 0.9rem;">📅 Fecha Desde</label>
                    <input type="date" @bind="fechaInicio" style="width: 100%; padding: 11px; border: 2px solid #e2e8f0; border-radius: 10px; cursor: pointer; font-size: 0.95rem; color: #475569; font-family: inherit;" />
                </div>

                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 700; color: #64748b; font-size: 0.9rem;">📅 Fecha Hasta</label>
                    <input type="date" @bind="fechaFin" style="width: 100%; padding: 11px; border: 2px solid #e2e8f0; border-radius: 10px; cursor: pointer; font-size: 0.95rem; color: #475569; font-family: inherit;" />
                </div>

                <div style="display: flex; align-items: flex-end;">
                    <button @onclick="AplicarFiltros" style="width: 100%; background: linear-gradient(135deg, #3087f2, #0c63f0); color: white; padding: 12px; border: none; border-radius: 10px; font-weight: 700; cursor: pointer; font-size: 1rem; transition: all 0.3s; box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);">
                        🔍 Aplicar Filtros
                    </button>
                </div>
            </div>
        </div>

        <div style="background: white; border-radius: 20px; overflow: hidden; box-shadow: 0 4px 20px rgba(0,0,0,0.05);">
            @if (!productosFiltrados.Any())
