    @* --- SOPORTE PARA DESCARGA DE EXCEL E IMPRESIÓN --- *@
    <script>
        // Función para descargar el archivo Excel generado con ClosedXML
        window.downloadFile = (fileName, contentBase64) => {
        const link = document.createElement('a');
        link.download = fileName;
        link.href = 'data:application/vnd.openxmlformats-officedocument.spreadsheetml.sheet;base64,' + contentBase64;
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
        }

        window.lanzarImpresionDirecta = () => {
        window.print();
        }
    </script>
