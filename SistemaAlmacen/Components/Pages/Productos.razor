@page "/productos"
@attribute [Authorize(Roles = "Admin,Gerente,Almacenista,Analista")]
@rendermode InteractiveServer
@using SistemaAlmacen.Models
@using SistemaAlmacen.Services
@using SistemaAlmacen.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using CategoriaModel = SistemaAlmacen.Models.Categoria
@inject ProductoService ProductoService
@inject ApplicationDbContext Context

<DialogModal @ref="DialogRef" />

<PageTitle>Productos - AlmaTrack</PageTitle>

<div class="productos-container">

    <div class="productos-header">
        <h1 class="productos-titulo">📦 Gestión de Nuevos Productos</h1>
        <button @onclick="AbrirModalNuevo" class="btn-nuevo">
            ➕ Nuevo Producto
        </button>
    </div>

    @if (cargando)
    {
        <div class="cargando-container">
            <p class="cargando-texto">⏳ Cargando productos...</p>
        </div>
    }
    else if (!productos.Any())
    {
        <div class="vacio-container">
            <div class="vacio-icono">📭</div>
            <h3 class="vacio-titulo">No hay productos registrados</h3>
            <p class="vacio-texto">Comienza agregando tu primer producto</p>
            <button @onclick="AbrirModalNuevo" class="btn-agregar">
                ➕ Agregar Producto
            </button>
        </div>
    }
    else
    {
        <!-- Búsqueda -->
        <input type="text" @bind="busqueda" @bind:event="oninput" placeholder="🔍 Buscar por nombre o código..." class="input-busqueda" />

        <!-- Tabla -->
        <div class="tabla-container">
            <div class="tabla-wrapper">
                <table class="tabla-productos">
                    <thead class="tabla-head">
                        <tr>
                            <th class="tabla-th">Código</th>
                            <th class="tabla-th">Nombre</th>
                            <th class="tabla-th">Categoría</th>
                            <th class="tabla-th">Stock</th>
                            <th class="tabla-th">P. Compra</th>
                            <th class="tabla-th">P. Venta</th>
                            <th class="tabla-th">Estado</th>
                            <th class="tabla-th">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Filtrados)
                        {
                            <tr class="tabla-fila">
                                <td class="tabla-td" data-label="Código">
                                    <strong class="tabla-codigo">@p.Codigo</strong>
                                </td>
                                <td class="tabla-td" data-label="Nombre">
                                    <span class="tabla-nombre">@p.Nombre</span>
                                </td>
                                <td class="tabla-td" data-label="Categoría">
                                    <span class="badge-categoria">
                                        @(p.Categoria?.Nombre ?? "Sin categoría")
                                    </span>
                                </td>
                                <td class="tabla-td" data-label="Stock">
                                    <span class="badge-stock" style="@GetColorStock(p)">
                                        @p.Stock @p.Unidad
                                    </span>
                                </td>
                                <td class="tabla-td" data-label="P. Compra">
                                    <span>@FormatearMoneda(p.PrecioCompra)</span>
                                </td>
                                <td class="tabla-td" data-label="P. Venta">
                                    <span>@FormatearMoneda(p.PrecioVenta)</span>
                                </td>
                                <td class="tabla-td" data-label="Estado">
                                    @if (p.Activo)
                                    {
                                        <span class="badge-activo">✅ Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge-inactivo">❌ Inactivo</span>
                                    }
                                </td>
                                <td class="tabla-td" data-label="Acciones">
                                    <div class="acciones-container">
                                        <button @onclick="() => VerDetalle(p)" title="Ver detalles" class="btn-accion btn-ver">
                                            👁️
                                        </button>
                                        <button @onclick="() => Editar(p)" title="Editar" class="btn-accion btn-editar">
                                            ✏️
                                        </button>
                                        <button @onclick="() => Eliminar(p)" title="Eliminar" class="btn-accion btn-eliminar">
                                            🗑️
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="tabla-footer">
                <p class="tabla-total"><strong>Total:</strong> @Filtrados.Count productos</p>
            </div>
        </div>
    }
</div>

@* Modal Nuevo/Editar *@
@if (mostrarModal)
{
    <div class="modal-overlay" @onclick="CerrarModal">
        <div class="modal-contenido" @onclick:stopPropagation>
            <div class="modal-header">
                <h3 class="modal-titulo">@(esEdicion ? "✏️ Editar" : "➕ Nuevo") Producto</h3>
                <button @onclick="CerrarModal" class="modal-cerrar">×</button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Código *</label>
                    <input type="text" @bind="form.Codigo" class="form-input" />
                </div>

                <div class="form-group">
                    <label class="form-label">Nombre *</label>
                    <input type="text" @bind="form.Nombre" class="form-input" />
                </div>

                <div class="form-group">
                    <label class="form-label">Descripción</label>
                    <textarea @bind="form.Descripcion" rows="3" class="form-textarea"></textarea>
                </div>

                <div class="form-grid">
                    <div>
                        <label class="form-label">Categoría *</label>
                        <select @bind="form.CategoriaId" class="form-select">
                            <option value="0">Seleccione...</option>
                            @foreach (var c in categorias)
                            {
                                <option value="@c.Id">@c.Nombre</option>
                            }
                        </select>
                    </div>

                    <div>
                        <label class="form-label">Unidad</label>
                        <input type="text" @bind="form.Unidad" class="form-input" />
                    </div>
                </div>

                <div class="form-grid">
                    <div>
                        <label class="form-label">Precio Compra </label>
                        <input type="number" @bind="form.PrecioCompra" step="0.01" class="form-input" />
                    </div>

                    <div>
                        <label class="form-label">Precio Venta </label>
                        <input type="number" @bind="form.PrecioVenta" step="0.01" class="form-input" />
                    </div>
                </div>

                <div class="form-grid">
                    <div>
                        <label class="form-label">Stock </label>
                        <input type="number" @bind="form.Stock" class="form-input" />
                    </div>

                    <div>
                        <label class="form-label">Stock Mínimo </label>
                        <input type="number" @bind="form.StockMinimo" class="form-input" />
                    </div>
                </div>

                <div class="form-checkbox">
                    <label class="checkbox-label">
                        <input type="checkbox" @bind="form.Activo" class="checkbox-input" />
                        <span class="checkbox-text">Producto activo</span>
                    </label>
                </div>

                @if (!string.IsNullOrEmpty(error))
                {
                    <div class="error-mensaje">
                        ❌ @error
                    </div>
                }

                <div class="modal-footer">
                    <button @onclick="CerrarModal" class="btn-cancelar">
                        Cancelar
                    </button>
                    <button @onclick="Guardar" disabled="@guardando" class="btn-guardar" style="opacity: @(guardando ? "0.6" : "1")">
                        @(guardando ? "⏳ Guardando..." : "💾 Guardar")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Modal Detalle *@
@if (mostrarDetalle && detalle != null)
{
    <div class="modal-overlay" @onclick="CerrarDetalle">
        <div class="modal-detalle" @onclick:stopPropagation>
            <div class="modal-header">
                <h3 class="modal-titulo-detalle">📋 Detalles del Producto</h3>
                <button @onclick="CerrarDetalle" class="modal-cerrar">×</button>
            </div>

            <div class="detalle-body">
                <div class="detalle-grid">
                    <div class="detalle-item">
                        <strong class="detalle-label">Código:</strong>
                        <span class="detalle-valor">@detalle.Codigo</span>
                    </div>
                    <div class="detalle-item">
                        <strong class="detalle-label">Nombre:</strong>
                        <span class="detalle-valor">@detalle.Nombre</span>
                    </div>
                    @if (!string.IsNullOrEmpty(detalle.Descripcion))
                    {
                        <div class="detalle-item">
                            <strong class="detalle-label">Descripción:</strong>
                            <span class="detalle-valor">@detalle.Descripcion</span>
                        </div>
                    }
                    <div class="detalle-item">
                        <strong class="detalle-label">Categoría:</strong>
                        <span class="detalle-valor">@(detalle.Categoria?.Nombre ?? "Sin categoría")</span>
                    </div>
                    <div class="detalle-item">
                        <strong class="detalle-label">Stock:</strong>
                        <span class="detalle-valor">@detalle.Stock @detalle.Unidad</span>
                    </div>
                    <div class="detalle-item">
                        <strong class="detalle-label">P. Compra:</strong>
                        <span class="detalle-valor">@FormatearMoneda(detalle.PrecioCompra)</span>
                    </div>
                    <div class="detalle-item">
                        <strong class="detalle-label">P. Venta:</strong>
                        <span class="detalle-valor">@FormatearMoneda(detalle.PrecioVenta)</span>
                    </div>
                </div>

                <div class="detalle-footer">
                    <button @onclick="CerrarDetalle" class="btn-cancelar">
                        Cerrar
                    </button>
                    <button @onclick="() => { CerrarDetalle(); Editar(detalle); }" class="btn-editar-detalle">
                        ✏️ Editar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

