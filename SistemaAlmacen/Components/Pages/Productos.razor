            content: attr(data-label);
            font-weight: 700;
            color: #4b5563;
            font-size: 0.85rem;
            flex: 0 0 100px;
        }

        .tabla-td:first-child {
            padding-top: 0;
        }

        .tabla-td:last-child {
            padding-bottom: 0;
            flex-direction: column;
            align-items: stretch;
        }

        .tabla-td:last-child::before {
            margin-bottom: 10px;
        }

        .tabla-codigo {
            font-size: 1rem;
        }

        .tabla-nombre {
            font-size: 0.95rem;
        }

        .badge-categoria,
        .badge-stock,
        .badge-activo,
        .badge-inactivo {
            padding: 5px 10px;
            font-size: 0.8rem;
        }

        .acciones-container {
            width: 100%;
            gap: 8px;
        }

        .btn-accion {
            flex: 1;
            padding: 10px;
            font-size: 1.2rem;
        }

        .tabla-footer {
            text-align: center;
        }

        /* Modal responsive */
        .modal-contenido,
        .modal-detalle {
            width: 95%;
            max-height: 85vh;
            margin: 10px;
        }

        .modal-header {
            padding: 15px 20px;
        }

        .modal-titulo,
        .modal-titulo-detalle {
            font-size: 1.2rem;
        }

        .modal-body,
        .detalle-body {
            padding: 20px;
        }

        .form-grid {
            grid-template-columns: 1fr;
            gap: 0;
        }

        .form-label {
            font-size: 1rem;
            margin-bottom: 8px;
        }

        .form-input,
        .form-select,
        .form-textarea {
            font-size: 1rem;
