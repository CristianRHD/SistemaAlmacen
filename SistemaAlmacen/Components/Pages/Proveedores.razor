@code {
    private List<Proveedor> proveedores = new();
    private Proveedor form = new();
    private Proveedor? detalle;
    private string busqueda = "";
    private string error = "";
    private bool cargando = true;
    private bool mostrarModal = false;
    private bool mostrarDetalle = false;
    private bool esEdicion = false;
    private bool guardando = false;
    private DialogModal DialogRef;

    private List<Proveedor> Filtrados =>
        string.IsNullOrWhiteSpace(busqueda)
            ? proveedores
            : proveedores.Where(p =>
                p.Nombre.Contains(busqueda, StringComparison.OrdinalIgnoreCase) ||
                (p.RNC != null && p.RNC.Contains(busqueda, StringComparison.OrdinalIgnoreCase)) ||
                (p.Telefono != null && p.Telefono.Contains(busqueda, StringComparison.OrdinalIgnoreCase))
            ).ToList();

    protected override async Task OnInitializedAsync()
    {
        await Cargar();
    }

    private async Task Cargar()
    {
        cargando = true;
        proveedores = await Context.Proveedores
            .AsNoTracking()
            .OrderByDescending(p => p.FechaRegistro)
            .ToListAsync();
        cargando = false;
    }

    private void AbrirModalNuevo()
    {
        form = new Proveedor
        {
            Activo = true,
            FechaRegistro = DateTime.Now
        };
        esEdicion = false;
        error = "";
        mostrarModal = true;
    }

    private void Editar(Proveedor p)
    {
        form = new Proveedor
        {
            Id = p.Id,
            Nombre = p.Nombre,
            RNC = p.RNC,
            Telefono = p.Telefono,
            Email = p.Email,
            Direccion = p.Direccion,
            Activo = p.Activo,
            FechaRegistro = p.FechaRegistro
        };
        esEdicion = true;
        error = "";
        mostrarModal = true;
    }

    private async Task Guardar()
    {
        if (string.IsNullOrWhiteSpace(form.Nombre))
        {
            error = "El nombre es requerido";
            return;
        }

        guardando = true;
        error = "";

        try
        {
            if (esEdicion)
            {
                var existingProveedor = await Context.Proveedores.FindAsync(form.Id);
                if (existingProveedor != null)
                {
                    existingProveedor.Nombre = form.Nombre;
                    existingProveedor.RNC = form.RNC;
                    existingProveedor.Telefono = form.Telefono;
                    existingProveedor.Email = form.Email;
                    existingProveedor.Direccion = form.Direccion;
                    existingProveedor.Activo = form.Activo;
                }
            }
            else
            {
                form.FechaRegistro = DateTime.Now;
                Context.Proveedores.Add(form);
            }

            await Context.SaveChangesAsync();
            await Cargar();
            CerrarModal();
            await DialogRef.ShowSuccessAsync(
                esEdicion ? "Proveedor actualizado" : "Proveedor agregado",
                esEdicion ? "El proveedor se actualizó correctamente" : "El proveedor se agregó correctamente"
            );
        }
        catch (Exception ex)
        {
            error = $"Error: {ex.Message}";
        }
        finally
        {
            guardando = false;
        }
    }

    private async Task Eliminar(Proveedor p)
    {
        bool ok = await DialogRef.ShowConfirmAsync(
            "Eliminar Proveedor",
            $"¿Está seguro de que desea eliminar el proveedor '{p.Nombre}'? Esta acción no se puede deshacer.",
            "Eliminar",
            "🗑️"
        );
        if (ok)
        {
            var proveedorAEliminar = await Context.Proveedores.FindAsync(p.Id);
            if (proveedorAEliminar != null)
            {
                Context.Proveedores.Remove(proveedorAEliminar);
                await Context.SaveChangesAsync();
                await Cargar();
                await DialogRef.ShowSuccessAsync("Proveedor eliminado", "El proveedor se eliminó correctamente");
            }
        }
    }

    private void VerDetalle(Proveedor p)
    {
        detalle = p;
        mostrarDetalle = true;
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        form = new();
        error = "";
    }

    private void CerrarDetalle()
    {
        mostrarDetalle = false;
        detalle = null;
    }
}
