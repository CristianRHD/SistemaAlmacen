@page "/proveedores"
@attribute [Authorize(Roles = "Admin,Gerente,Analista")]
@rendermode InteractiveServer
@using SistemaAlmacen.Models
@using SistemaAlmacen.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@inject ApplicationDbContext Context

<DialogModal @ref="DialogRef" />

<PageTitle>Proveedores - AlmaTrack</PageTitle>

<div class="proveedores-container">
    <div class="proveedores-header">
        <h1 class="proveedores-titulo">🚚 Gestión de Proveedores</h1>
        <button @onclick="AbrirModalNuevo" class="btn-nuevo">
            ➕ Nuevo Proveedor
        </button>
    </div>

    @if (cargando)
    {
        <div class="cargando-container">
            <p class="cargando-texto">⏳ Cargando proveedores...</p>
        </div>
    }
    else if (!proveedores.Any())
    {
        <div class="vacio-container">
            <div class="vacio-icono">📭</div>
            <h3 class="vacio-titulo">No hay proveedores registrados</h3>
            <p class="vacio-texto">Comienza agregando tu primer proveedor</p>
            <button @onclick="AbrirModalNuevo" class="btn-agregar">
                ➕ Agregar Proveedor
            </button>
        </div>
    }
    else
    {
        <input type="text" @bind="busqueda" @bind:event="oninput" placeholder="🔍 Buscar por nombre, RNC o teléfono..." class="input-busqueda" />

        <div class="tabla-container">
            <div class="tabla-wrapper">
                <table class="tabla-proveedores">
                    <thead class="tabla-head">
                        <tr>
                            <th class="tabla-th">Nombre</th>
                            <th class="tabla-th">RNC</th>
                            <th class="tabla-th">Teléfono</th>
                            <th class="tabla-th">Email</th>
                            <th class="tabla-th">Dirección</th>
                            <th class="tabla-th">Estado</th>
                            <th class="tabla-th">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Filtrados)
                        {
                            <tr class="tabla-fila">
                                <td class="tabla-td"><strong class="tabla-nombre">@p.Nombre</strong></td>
                                <td class="tabla-td">@(p.RNC ?? "N/A")</td>
                                <td class="tabla-td">@(p.Telefono ?? "N/A")</td>
                                <td class="tabla-td">@(p.Email ?? "N/A")</td>
                                <td class="tabla-td tabla-direccion">@(p.Direccion ?? "Sin dirección")</td>
                                <td class="tabla-td">
                                   
                                </td>
                                <td class="tabla-td">
                                    <div class="acciones-container">
                                        <button @onclick="() => VerDetalle(p)" title="Ver detalles" class="btn-accion btn-ver">👁️</button>
                                        <button @onclick="() => Editar(p)" title="Editar" class="btn-accion btn-editar">✏️</button>
                                        <button @onclick="() => Eliminar(p)" title="Eliminar" class="btn-accion btn-eliminar">🗑️</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="tabla-footer">
                <p class="tabla-total"><strong>Total:</strong> @Filtrados.Count proveedores</p>
            </div>
        </div>
    }
</div>

@if (mostrarModal)
{
    <div class="modal-overlay" @onclick="CerrarModal">
        <div class="modal-contenido" @onclick:stopPropagation>
            <div class="modal-header">
                <h3 class="modal-titulo">@(esEdicion ? "✏️ Editar" : "➕ Nuevo") Proveedor</h3>
                <button @onclick="CerrarModal" class="modal-cerrar">×</button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Nombre *</label>
                    <input type="text" @bind="form.Nombre" placeholder="Nombre del proveedor" class="form-input" />
                </div>

                <div class="form-grid">
                    <div>
                        <label class="form-label">RNC</label>
                        <input type="text" @bind="form.RNC" placeholder="000-0000000-0" class="form-input" />
                    </div>

                    <div>
                        <label class="form-label">Teléfono</label>
                        <input type="text" @bind="form.Telefono" placeholder="(809) 000-0000" class="form-input" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input type="email" @bind="form.Email" placeholder="proveedor@ejemplo.com" class="form-input" />
                </div>

                <div class="form-group">
                    <label class="form-label">Dirección</label>
                    <textarea @bind="form.Direccion" rows="3" placeholder="Dirección completa del proveedor" class="form-textarea"></textarea>
                </div>

                <div class="form-checkbox">
                    <label class="checkbox-label">
                        <input type="checkbox" @bind="form.Activo" class="checkbox-input" />
                        <span class="checkbox-text">Proveedor activo</span>
                    </label>
                </div>

                @if (!string.IsNullOrEmpty(error))
                {
                    <div class="error-mensaje">
                        ❌ @error
                    </div>
                }

                <div class="modal-footer">
                    <button @onclick="CerrarModal" class="btn-cancelar">Cancelar</button>
                    <button @onclick="Guardar" disabled="@guardando" class="btn-guardar" style="opacity: @(guardando ? "0.6" : "1")">
                        @(guardando ? "⏳ Guardando..." : "💾 Guardar")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@if (mostrarDetalle && detalle != null)
{
    <div class="modal-overlay" @onclick="CerrarDetalle">
        <div class="modal-detalle" @onclick:stopPropagation>
            <div class="modal-header">
                <h3 class="modal-titulo-detalle">📋 Detalles del Proveedor</h3>
                <button @onclick="CerrarDetalle" class="modal-cerrar">×</button>
            </div>

            <div class="detalle-body">
                <div class="detalle-grid">
                    <div class="detalle-item">
                        <strong class="detalle-label">Nombre:</strong>
                        <span class="detalle-valor">@detalle.Nombre</span>
                    </div>
                    <div class="detalle-item">
                        <strong class="detalle-label">RNC:</strong>
                        <span class="detalle-valor">@(detalle.RNC ?? "No especificado")</span>
                    </div>
                    <div class="detalle-item">
                        <strong class="detalle-label">Teléfono:</strong>
                        <span class="detalle-valor">@(detalle.Telefono ?? "No especificado")</span>
                    </div>
                    <div class="detalle-item">
                        <strong class="detalle-label">Email:</strong>
                        <span class="detalle-valor">@(detalle.Email ?? "No especificado")</span>
                    </div>
                    <div class="detalle-item">
                        <strong class="detalle-label">Dirección:</strong>
                        <span class="detalle-valor">@(detalle.Direccion ?? "No especificada")</span>
                    </div>
                    <div class="detalle-item">
                        <strong class="detalle-label">Fecha Registro:</strong>
                        <span class="detalle-valor">@detalle.FechaRegistro.ToString("dd/MM/yyyy")</span>
                    </div>
                   
                </div>

                <div class="detalle-footer">
                    <button @onclick="CerrarDetalle" class="btn-cancelar">Cerrar</button>
                    <button @onclick="() => { CerrarDetalle(); Editar(detalle); }" class="btn-editar-detalle">✏️ Editar</button>
                </div>
            </div>
        </div>
    </div>
}

