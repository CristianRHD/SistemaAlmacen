<div class="movimientos-container">
    <div class="page-header">
        <h1 class="page-title">📊 Registro de Movimientos</h1>
        <button @onclick="AbrirModalNuevo" class="btn-primary">
            ➕ Nuevo Movimiento
        </button>
    </div>

    <div class="stats-grid">
        <div class="stat-card-entrada">
            <div class="stat-icon">📈</div>
            <div class="stat-value">@TotalEntradas</div>
            <div class="stat-label">Entradas (Hoy)</div>
        </div>

        <div class="stat-card-salida">
            <div class="stat-icon">📉</div>
            <div class="stat-value">@TotalSalidas</div>
            <div class="stat-label">Salidas (Hoy)</div>
        </div>

        <div class="stat-card-total">
            <div class="stat-icon">📋</div>
            <div class="stat-value">@movimientos.Count</div>
            <div class="stat-label">Total Movimientos</div>
        </div>
    </div>

    @if (cargando)
    {
        <div class="loading-state">
            <p class="loading-text">⏳ Cargando movimientos...</p>
        </div>
    }
    else if (!movimientos.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">📊</div>
            <h3 class="empty-title">No hay movimientos registrados</h3>
            <p class="empty-text">Comienza registrando tu primer movimiento</p>
            <button @onclick="AbrirModalNuevo" class="btn-primary">
                ➕ Agregar Movimiento
            </button>
        </div>
    }
    else
    {
        <div class="filters-container">
            <input type="text" @bind="busqueda" @bind:event="oninput"
                   placeholder="🔍 Buscar por producto o referencia..."
                   class="search-input" />

            <select @bind="filtroTipo" class="filter-select">
                <option value="">Todos los tipos</option>
                <option value="Entrada">Entradas</option>
                <option value="Salida">Salidas</option>
            </select>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead class="table-header">
                    <tr>
                        <th>Fecha</th>
                        <th>Tipo</th>
                        <th>Referencia</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Observaciones</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Filtrados)
                    {
                        <tr class="table-row">
                            <td class="table-cell">@m.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="table-cell">
                                @if (m.Tipo == "Entrada")
                                {
                                    <span class="badge-entrada">📈 Entrada</span>
                                }
                                else
                                {
                                    <span class="badge-salida">📉 Salida</span>
                                }
                            </td>
                            <td class="table-cell"><strong>@m.Referencia</strong></td>
                            <td class="table-cell">
                                <div>@m.Producto?.Nombre</div>
                                <div class="producto-info">Código: @m.Producto?.Codigo</div>
                            </td>
                            <td class="table-cell">
                                <span class="badge-cantidad">@m.Cantidad</span>
                            </td>
                            <td class="table-cell">@(m.Observaciones ?? "-")</td>
                            <td class="table-cell">
                                <button @onclick="() => Eliminar(m)" class="btn-delete">🗑️</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="table-footer">
            <p><strong>Total:</strong> @Filtrados.Count movimientos</p>
        </div>
    }
</div>

@if (mostrarModal)
{
    <div class="modal-overlay" @onclick="CerrarModal">
        <div class="modal-content" @onclick:stopPropagation>
            <div class="modal-header">
                <h3 class="modal-title">➕ Nuevo Movimiento</h3>
                <button @onclick="CerrarModal" class="btn-close">×</button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Tipo de Movimiento *</label>
                    <select @bind="form.Tipo" class="form-select">
                        <option value="">Seleccione...</option>
                        <option value="Entrada">Entrada</option>
                        <option value="Salida">Salida</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Producto *</label>
                    <select @bind="form.ProductoId" class="form-select">
                        <option value="0">Seleccione...</option>
                        @foreach (var p in productos)
                        {
                            <option value="@p.Id">@p.Nombre (@p.Codigo)</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Cantidad *</label>
                    <input type="number" @bind="form.Cantidad" min="1" class="form-input" />
                </div>

                <div class="form-group">
                    <label class="form-label">Referencia</label>
                    <input type="text" @bind="form.Referencia" placeholder="Ej: FAC-001, VENTA-123" class="form-input" />
                </div>

                <div class="form-group">
                    <label class="form-label">Observaciones</label>
                    <textarea @bind="form.Observaciones" rows="3" class="form-textarea"></textarea>
                </div>

                @if (!string.IsNullOrEmpty(error))
                {
                    <div class="error-message">❌ @error</div>
                }

                <div class="modal-footer">
                    <button @onclick="CerrarModal" class="btn-secondary">Cancelar</button>
                    <button @onclick="Guardar" disabled="@guardando" class="btn-save">
                        @(guardando ? "⏳ Guardando..." : "💾 Guardar")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Movimiento> movimientos = new();
    private List<Producto> productos = new();
    private Movimiento form = new();
    private string busqueda = "";
    private string filtroTipo = "";
    private string error = "";
    private bool cargando = true;
    private bool mostrarModal = false;
    private bool guardando = false;

    private int TotalEntradas => movimientos.Count(m => m.Tipo == "Entrada" && m.Fecha.Date == DateTime.Today);
    private int TotalSalidas => movimientos.Count(m => m.Tipo == "Salida" && m.Fecha.Date == DateTime.Today);

    private List<Movimiento> Filtrados
    {
        get
        {
            var query = movimientos.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(busqueda))
            {
                query = query.Where(m =>
                    (m.Producto?.Nombre?.Contains(busqueda, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (m.Referencia?.Contains(busqueda, StringComparison.OrdinalIgnoreCase) ?? false)
                );
            }

            if (!string.IsNullOrWhiteSpace(filtroTipo))
            {
                query = query.Where(m => m.Tipo == filtroTipo);
            }

            return query.OrderByDescending(m => m.Fecha).ToList();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await Cargar();
    }

    private async Task Cargar()
    {
        cargando = true;

        movimientos = await Context.Movimientos
            .Include(m => m.Producto)
            .OrderByDescending(m => m.Fecha)
            .ToListAsync();

        productos = await Context.Productos
            .Where(p => p.Activo)
            .OrderBy(p => p.Nombre)
            .ToListAsync();

        cargando = false;
    }

    private void AbrirModalNuevo()
    {
        form = new Movimiento
        {
            Fecha = DateTime.Now,
            Referencia = GenerarReferencia()
        };
        error = "";
        mostrarModal = true;
    }

    private async Task Guardar()
    {
        if (string.IsNullOrWhiteSpace(form.Tipo))
        {
            error = "Seleccione el tipo de movimiento";
            return;
        }

        if (form.ProductoId == 0)
        {
            error = "Seleccione un producto";
            return;
        }

        if (form.Cantidad <= 0)
        {
            error = "La cantidad debe ser mayor a 0";
            return;
        }

        guardando = true;
        error = "";

        try
        {
            var producto = await Context.Productos.FindAsync(form.ProductoId);
            if (producto == null)
            {
                error = "Producto no encontrado";
                return;
            }

            if (form.Tipo == "Salida" && producto.Stock < form.Cantidad)
            {
                error = $"Stock insuficiente. Disponible: {producto.Stock}";
                return;
            }

            if (form.Tipo == "Entrada")
            {
                producto.Stock += form.Cantidad;
            }
            else if (form.Tipo == "Salida")
            {
                producto.Stock -= form.Cantidad;
            }

            Context.Movimientos.Add(form);
            await Context.SaveChangesAsync();

            await Cargar();
            CerrarModal();
            await JS.InvokeVoidAsync("alert", "✅ Movimiento registrado correctamente");
        }
        catch (Exception ex)
        {
            error = $"Error: {ex.Message}";
        }
        finally
        {
            guardando = false;
        }
    }

    private async Task Eliminar(Movimiento m)
    {
        bool ok = await JS.InvokeAsync<bool>("confirm", $"¿Eliminar movimiento '{m.Referencia}'?");
        if (ok)
        {
            try
            {
                var producto = await Context.Productos.FindAsync(m.ProductoId);
                if (producto != null)
                {
                    if (m.Tipo == "Entrada")
                    {
                        producto.Stock -= m.Cantidad;
                    }
                    else if (m.Tipo == "Salida")
                    {
                        producto.Stock += m.Cantidad;
                    }
                }

                Context.Movimientos.Remove(m);
                await Context.SaveChangesAsync();
                await Cargar();
                await JS.InvokeVoidAsync("alert", "✅ Movimiento eliminado");
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Error: {ex.Message}");
            }
        }
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        form = new();
        error = "";
    }

    private string GenerarReferencia()
    {
        return $"MOV-{DateTime.Now:yyyyMMddHHmmss}";
    }
}