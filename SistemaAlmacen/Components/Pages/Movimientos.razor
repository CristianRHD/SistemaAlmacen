@page "/movimientos"
@attribute [Authorize(Roles = "Admin,Gerente,Almacenista")]
@rendermode InteractiveServer
@using SistemaAlmacen.Models
@using SistemaAlmacen.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@inject ApplicationDbContext Context


<DialogModal @ref="DialogRef" /><PageTitle>Movimientos</PageTitle>



<div class="movimientos-container">
    <div class="page-header">
        <h1 class="page-title">📊 Registro de Movimientos</h1>
        <button @onclick="AbrirModalNuevo" class="btn-primary">
            ➕ Nuevo Movimiento Múltiple
        </button>
    </div>

    <div class="stats-grid">
        <div class="stat-card-entrada">
            <div class="stat-icon">📈</div>
            <div class="stat-value">@TotalEntradas</div>
            <div class="stat-label">Entradas (Hoy)</div>
        </div>
        <div class="stat-card-salida">
            <div class="stat-icon">📉</div>
            <div class="stat-value">@TotalSalidas</div>
            <div class="stat-label">Salidas (Hoy)</div>
        </div>
        <div class="stat-card-total">
            <div class="stat-icon">📋</div>
            <div class="stat-value">@movimientos.Count</div>
            <div class="stat-label">Movimientos Totales</div>
        </div>
    </div>

    @if (cargando)
    {
        <div class="loading-state">
            <p class="loading-text">⏳ Cargando movimientos...</p>
        </div>
    }
    else
    {
        <div class="filters-container">
            <input type="text" @bind="busqueda" @bind:event="oninput"
                   placeholder="🔍 Buscar por responsable, referencia, producto u observación..."
                   class="search-input" />

            <select @bind="filtroTipo" class="filter-select">
                <option value="">Todos los tipos</option>
                <option value="Entrada">Entradas</option>
                <option value="Salida">Salidas</option>
            </select>
        </div>

        <div class="table-container">
            <div style="overflow-x: auto;">
                <table class="data-table">
                    <thead class="table-header">
                        <tr>
                            <th>Fecha</th>
                            <th>Referencia</th>
                            <th>Tipo</th>
                            <th>Detalles / Responsable</th>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Filtrados)
                        {
                            <tr class="table-row">
                                <td class="table-cell">@m.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="table-cell"><strong>@m.Referencia</strong></td>
                                <td class="table-cell">
                                    @if (m.Tipo == "Entrada")
                                    {
                                        <span class="badge-entrada">📥 Entrada</span>
                                    }
                                    else
                                    {
                                        <span class="badge-salida">📤 Salida</span>
                                    }
                                </td>
                                <td class="table-cell" style="max-width: 250px;">
                                    <span style="display:block; font-size:0.9rem; color:#333;">@(m.Observaciones ?? "-")</span>
                                </td>
                                <td class="table-cell">
                                    <div style="font-weight:600;">@m.Producto?.Nombre</div>
                                    <div class="producto-info">Cod: @m.Producto?.Codigo</div>
                                </td>
                                <td class="table-cell">
                                    <span class="badge-cantidad">@m.Cantidad</span>
                                </td>
                                <td class="table-cell">
                                    <button @onclick="() => Eliminar(m)" class="btn-delete" title="Revertir Movimiento">🗑️</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@if (mostrarModal)
{
    <div class="modal-overlay" @onclick="CerrarModal">
        <div class="modal-content" @onclick:stopPropagation>
            <div class="modal-header">
                <h3 class="modal-title">📝 Registrar Movimiento</h3>
                <button @onclick="CerrarModal" class="btn-close">×</button>
            </div>

            <div class="modal-body">
                <div class="row-2-col">
                    <div class="form-group">
                        <label class="form-label">Tipo de Movimiento *</label>
                        <select @bind="tipoMovimientoGlobal" class="form-select" @oninput="CambiarTipoGlobal">
                            <option value="Entrada">📥 Entrada (Recepción)</option>
                            <option value="Salida">📤 Salida (Despacho)</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Referencia (Auto)</label>
                        <input type="text" @bind="referenciaGlobal" readonly class="form-input readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Responsable / Solicitante *</label>
                    <input type="text" @bind="responsableGlobal" placeholder="Ej: Juan Pérez, Cliente Final, Dpto. Ventas..." class="form-input" />
                </div>

                <div class="form-group">
                    <label class="form-label">Observaciones / Notas Adicionales</label>
                    <textarea @bind="observacionesGlobal" rows="2" placeholder="Ej: Mercancía revisada, entrega parcial..." class="form-textarea"></textarea>
                </div>

                <hr style="margin: 20px 0; border: 0; border-top: 1px solid #eee;" />

                <h4 style="margin-bottom: 15px; color: #1414b8;">📦 Agregar Productos</h4>

                <div class="add-product-box">
                    <div class="form-group">
                        <label class="form-label">Producto</label>
                        <select @bind="productoTempId" class="form-select">
                            <option value="0">-- Seleccionar Producto --</option>
                            @foreach (var p in productos)
                            {
                                <option value="@p.Id">@p.Nombre (Stock Actual: @p.Stock)</option>
                            }
                        </select>
                    </div>

                    <div class="row-2-col">
                        <div class="form-group">
                            <label class="form-label">Cantidad</label>
                            <input type="number" @bind="cantidadTemp" min="1" class="form-input" />
                        </div>
                        <div class="form-group" style="display: flex; align-items: flex-end;">
                            <button @onclick="AgregarProductoALista" class="btn-add">➕ Agregar a Lista</button>
                        </div>
                    </div>
                </div>

                @if (listaMovimientosTemp.Any())
                {
                    <div class="temp-list-container">
                        <table class="temp-table">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cant.</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in listaMovimientosTemp)
                                {
                                    <tr>
                                        <td>@productos.FirstOrDefault(p => p.Id == item.ProductoId)?.Nombre</td>
                                        <td><strong>@item.Cantidad</strong></td>
                                        <td>
                                            <button @onclick="() => RemoverDeLista(item)" class="btn-sm-danger">Quitar</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

                @if (!string.IsNullOrEmpty(error))
                {
                    <div class="error-message">⚠️ @error</div>
                }

                <div class="modal-footer">
                    <button @onclick="CerrarModal" class="btn-secondary">Cancelar</button>
                    <button @onclick="GuardarTodo" disabled="@(!listaMovimientosTemp.Any() || guardando)" class="btn-save">
                        @(guardando ? "💾 Guardando..." : $"💾 Finalizar ({listaMovimientosTemp.Count} productos)")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    // Modelos
    private List<Movimiento> movimientos = new();
    private List<Producto> productos = new();

    // Variables para el formulario múltiple
    private List<Movimiento> listaMovimientosTemp = new();
    private string tipoMovimientoGlobal = "Salida"; // Por defecto Salida
    private string referenciaGlobal = "";
    private string responsableGlobal = "";
    private string observacionesGlobal = ""; // VARIABLE RESTAURADA

    // Variables temporales para agregar productos
    private int productoTempId = 0;
    private int cantidadTemp = 1;

    private string busqueda = "";
    private string filtroTipo = "";
    private string error = "";
    private bool cargando = true;
    private bool mostrarModal = false;
    private bool guardando = false;
    private DialogModal DialogRef = default!;

    // Estadísticas
    private int TotalEntradas => movimientos.Count(m => m.Tipo == "Entrada" && m.Fecha.Date == DateTime.Today);
    private int TotalSalidas => movimientos.Count(m => m.Tipo == "Salida" && m.Fecha.Date == DateTime.Today);

    private List<Movimiento> Filtrados
    {
        get
        {
            var query = movimientos.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(busqueda))
            {
                query = query.Where(m =>
                    (m.Producto?.Nombre?.Contains(busqueda, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (m.Referencia?.Contains(busqueda, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (m.Observaciones?.Contains(busqueda, StringComparison.OrdinalIgnoreCase) ?? false)
                );
            }

            if (!string.IsNullOrWhiteSpace(filtroTipo))
            {
                query = query.Where(m => m.Tipo == filtroTipo);
            }

            return query.OrderByDescending(m => m.Fecha).ToList();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await Cargar();
    }

    private async Task Cargar()
    {
        cargando = true;
        movimientos = await Context.Movimientos
            .Include(m => m.Producto)
            .OrderByDescending(m => m.Fecha)
            .ToListAsync();

        productos = await Context.Productos
            .Where(p => p.Activo)
            .OrderBy(p => p.Nombre)
            .ToListAsync();
        cargando = false;
    }

    private void AbrirModalNuevo()
    {
        // Reiniciar todas las variables
        listaMovimientosTemp = new();
        referenciaGlobal = $"MOV-{DateTime.Now:yyyyMMddHHmmss}";
        responsableGlobal = "";
        observacionesGlobal = ""; // Limpiar observaciones
        productoTempId = 0;
        cantidadTemp = 1;
        tipoMovimientoGlobal = "Salida";
        error = "";
        mostrarModal = true;
    }

    private void CambiarTipoGlobal(ChangeEventArgs e)
    {
        tipoMovimientoGlobal = e.Value?.ToString() ?? "Salida";
        listaMovimientosTemp.Clear(); // Limpiar lista al cambiar tipo para evitar errores de stock
    }

    private void AgregarProductoALista()
    {
        error = "";

        if (productoTempId == 0)
        {
            error = "Seleccione un producto.";
            return;
        }

        if (cantidadTemp <= 0)
        {
            error = "La cantidad debe ser mayor a 0.";
            return;
        }

        var prod = productos.FirstOrDefault(p => p.Id == productoTempId);
        if (prod == null) return;

        // Validar Stock si es salida
        if (tipoMovimientoGlobal == "Salida")
        {
            var cantidadEnLista = listaMovimientosTemp.Where(x => x.ProductoId == productoTempId).Sum(x => x.Cantidad);
            if ((prod.Stock - cantidadEnLista) < cantidadTemp)
            {
                error = $"Stock insuficiente para '{prod.Nombre}'. Disponible real: {prod.Stock - cantidadEnLista}";
                return;
            }
        }

        // Agregar a la lista temporal
        listaMovimientosTemp.Add(new Movimiento
        {
            ProductoId = productoTempId,
            Cantidad = cantidadTemp,
            Tipo = tipoMovimientoGlobal,
            Referencia = referenciaGlobal,
            Fecha = DateTime.Now
        });

        // Reset inputs temp
        productoTempId = 0;
        cantidadTemp = 1;
    }

    private void RemoverDeLista(Movimiento item)
    {
        listaMovimientosTemp.Remove(item);
    }

    private async Task GuardarTodo()
    {
        if (!listaMovimientosTemp.Any())
        {
            error = "No hay productos en la lista.";
            return;
        }

        if (string.IsNullOrWhiteSpace(responsableGlobal))
        {
            error = "El campo Responsable es obligatorio.";
            return;
        }

        guardando = true;

        try
        {
            // Combinar Responsable y Observaciones para guardarlo en la BD
            string infoFinal = $"Responsable: {responsableGlobal}";
            if (!string.IsNullOrWhiteSpace(observacionesGlobal))
            {
                infoFinal += $" | Nota: {observacionesGlobal}";
            }

            foreach (var mov in listaMovimientosTemp)
            {
                mov.Observaciones = infoFinal;
                mov.Fecha = DateTime.Now;

                // Actualizar Stock
                var productoBD = await Context.Productos.FindAsync(mov.ProductoId);
                if (productoBD != null)
                {
                    if (mov.Tipo == "Entrada")
                        productoBD.Stock += mov.Cantidad;
                    else
                        productoBD.Stock -= mov.Cantidad;
                }

                Context.Movimientos.Add(mov);
            }

            await Context.SaveChangesAsync();
            await Cargar();
            CerrarModal();
            await DialogRef.ShowSuccessAsync("Movimientos registrados", "Los movimientos se registraron correctamente");
        }
        catch (Exception ex)
        {
            error = $"Error al guardar: {ex.Message}";
        }
        finally
        {
            guardando = false;
        }
    }

    private async Task Eliminar(Movimiento m)
    {
        bool ok = await DialogRef.ShowConfirmAsync(
            "Revertir Movimiento",
            $"¿Revertir este movimiento de '{m.Producto?.Nombre}'? Se restaurará el stock.",
            "Revertir",
            "↩️"
        );
        if (ok)
        {
            try
            {
                var producto = await Context.Productos.FindAsync(m.ProductoId);
                if (producto != null)
                {
                    // Revertir operación
                    if (m.Tipo == "Entrada")
                        producto.Stock -= m.Cantidad;
                    else
                        producto.Stock += m.Cantidad;
                }

                Context.Movimientos.Remove(m);
                await Context.SaveChangesAsync();
                await Cargar();
                await DialogRef.ShowSuccessAsync("Movimiento revertido", "El movimiento se revertió correctamente");
            }
            catch (Exception ex)
            {
                await DialogRef.ShowErrorAsync("Error", $"Error al revertir: {ex.Message}");
            }
        }
    }

    private void CerrarModal()
    {
        mostrarModal = false;
    }
}

