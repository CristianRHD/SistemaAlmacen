@code {
    private List<Producto> productos = new List<Producto>();
    private List<Producto> productosFiltrados = new List<Producto>();
    private List<Categoria> categorias = new List<Categoria>();

    // Filtros
    private int categoriaSeleccionada = 0;
    private string filtroStock = "";
    private DateTime? fechaInicio; // NUEVO
    private DateTime? fechaFin;    // NUEVO

    private bool cargandoDatos = true;
    private bool cargando = false;
    private string? urlDescarga = null;
    private DialogModal DialogRef = default!;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargandoDatos = true;

        try
        {
            // Filtramos solo los activos
            productos = await Context.Productos
                .Include(p => p.Categoria)
                .Where(p => p.Activo)
                .OrderByDescending(p => p.FechaCreacion) // Ordenar por fecha más reciente
                .ToListAsync();

            categorias = await Context.Categorias
                .OrderBy(c => c.Nombre)
                .ToListAsync();

            productosFiltrados = productos;
        }
        catch (Exception ex)
        {
            await DialogRef.ShowErrorAsync("Error al cargar datos", ex.Message);
        }

        cargandoDatos = false;
    }

    private void AplicarFiltros()
    {
        productosFiltrados = productos;

        // Filtro Categoría
        if (categoriaSeleccionada > 0)
        {
            productosFiltrados = productosFiltrados.Where(p => p.CategoriaId == categoriaSeleccionada).ToList();
        }

        // Filtro Stock
        if (!string.IsNullOrEmpty(filtroStock))
        {
            if (filtroStock == "bajo")
                productosFiltrados = productosFiltrados.Where(p => p.Stock > 0 && p.Stock <= p.StockMinimo).ToList();
            else if (filtroStock == "sin")
                productosFiltrados = productosFiltrados.Where(p => p.Stock == 0).ToList();
            else if (filtroStock == "normal")
                productosFiltrados = productosFiltrados.Where(p => p.Stock > p.StockMinimo).ToList();
        }

        // NUEVO: Filtro Fecha Inicio
        if (fechaInicio.HasValue)
        {
            productosFiltrados = productosFiltrados.Where(p => p.FechaCreacion.Date >= fechaInicio.Value.Date).ToList();
        }

        // NUEVO: Filtro Fecha Fin
        if (fechaFin.HasValue)
        {
            productosFiltrados = productosFiltrados.Where(p => p.FechaCreacion.Date <= fechaFin.Value.Date).ToList();
        }

        urlDescarga = null;
    }

    private void LimpiarFiltros()
    {
        categoriaSeleccionada = 0;
        filtroStock = "";
        fechaInicio = null;
        fechaFin = null;
        AplicarFiltros();
    }

    private string GetColorStock(Producto p)
    {
        if (p.Stock == 0) return "background: linear-gradient(135deg, #ef4444, #dc2626); color: white;";
        if (p.Stock <= p.StockMinimo) return "background: linear-gradient(135deg, #f59e0b, #d97706); color: white;";
        return "background: linear-gradient(135deg, #10b981, #059669); color: white;";
    }

    private async Task GenerarExcel()
    {
        cargando = true;
        urlDescarga = null;
        StateHasChanged();

        try
        {
            string carpetaDescargas = Path.Combine(Environment.WebRootPath, "descargas");
            if (!Directory.Exists(carpetaDescargas)) Directory.CreateDirectory(carpetaDescargas);

            // Limpieza de archivos viejos
            try
            {
                foreach (var f in new DirectoryInfo(carpetaDescargas).GetFiles())
                    if (f.CreationTime < DateTime.Now.AddMinutes(-30)) f.Delete();
            }
            catch { }

            string nombreArchivo = $"Reporte_Inventario_{DateTime.Now:yyyyMMdd_HHmmss}.xlsx";
            string rutaFisica = Path.Combine(carpetaDescargas, nombreArchivo);

            await Task.Run(() =>
            {
                using var workbook = new XLWorkbook();
                var worksheet = workbook.Worksheets.Add("Inventario");

                // Headers
                worksheet.Cell(1, 1).Value = "Código";
                worksheet.Cell(1, 2).Value = "Producto";
                worksheet.Cell(1, 3).Value = "Categoría";
                worksheet.Cell(1, 4).Value = "Fecha Registro"; // NUEVA COLUMNA EXCEL
                worksheet.Cell(1, 5).Value = "Stock";
                worksheet.Cell(1, 6).Value = "Unidad";
                worksheet.Cell(1, 7).Value = "P. Compra";
                worksheet.Cell(1, 8).Value = "P. Venta";
                worksheet.Cell(1, 9).Value = "Valor Total";

                var headerRange = worksheet.Range(1, 1, 1, 9);
                headerRange.Style.Font.Bold = true;
                headerRange.Style.Fill.BackgroundColor = XLColor.FromHtml("#3b82f6");
                headerRange.Style.Font.FontColor = XLColor.White;
                headerRange.Style.Alignment.Horizontal = XLAlignmentHorizontalValues.Center;

                int row = 2;
                foreach (var p in productosFiltrados)
                {
                    worksheet.Cell(row, 1).Value = p.Codigo;
                    worksheet.Cell(row, 2).Value = p.Nombre;
                    worksheet.Cell(row, 3).Value = p.Categoria.Nombre;
                    worksheet.Cell(row, 4).Value = p.FechaCreacion; // DATO FECHA
                    worksheet.Cell(row, 5).Value = p.Stock;
                    worksheet.Cell(row, 6).Value = p.Unidad;
                    worksheet.Cell(row, 7).Value = p.PrecioCompra;
                    worksheet.Cell(row, 8).Value = p.PrecioVenta;
                    worksheet.Cell(row, 9).Value = p.Stock * p.PrecioCompra;

                    worksheet.Cell(row, 4).Style.NumberFormat.Format = "dd/mm/yyyy"; // Formato Fecha
                    worksheet.Cell(row, 7).Style.NumberFormat.Format = "\"RD$\"#,##0.00";
                    worksheet.Cell(row, 8).Style.NumberFormat.Format = "\"RD$\"#,##0.00";
                    worksheet.Cell(row, 9).Style.NumberFormat.Format = "\"RD$\"#,##0.00";
                    row++;
                }

                // Total Row
                worksheet.Cell(row, 8).Value = "TOTAL:";
                worksheet.Cell(row, 8).Style.Font.Bold = true;
                worksheet.Cell(row, 9).Value = productosFiltrados.Sum(p => p.Stock * p.PrecioCompra);
                worksheet.Cell(row, 9).Style.NumberFormat.Format = "\"RD$\"#,##0.00";
                worksheet.Cell(row, 9).Style.Font.Bold = true;

                worksheet.Columns().AdjustToContents();
                workbook.SaveAs(rutaFisica);
            });

            urlDescarga = $"/descargas/{nombreArchivo}";
        }
        catch (Exception ex)
        {
            await DialogRef.ShowErrorAsync("Error", ex.Message);
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task IniciarDescarga()
    {
        if (!string.IsNullOrEmpty(urlDescarga))
        {
            await JS.InvokeVoidAsync("descargarSinVentanas", urlDescarga);
        }
    }
}