        padding: 60px;
        background: white;
        border-radius: 12px;
    }

    .loading-text {
        font-size: 1.2rem;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: 12px;
    }

    .empty-icon {
        font-size: 5rem;
        margin-bottom: 20px;
    }

    .empty-title {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .empty-text {
        color: #666;
        margin-bottom: 30px;
    }

    /* Filtros */
    .filters-container {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
    }

    .search-input {
        flex: 1;
        padding: 12px 20px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
