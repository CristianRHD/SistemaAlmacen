@page "/reportes"
@attribute [Authorize(Roles = "Admin,Gerente,Analista")]
@rendermode InteractiveServer
@using SistemaAlmacen.Models
@using SistemaAlmacen.Data
@using Microsoft.EntityFrameworkCore
@using ClosedXML.Excel
@using System.IO
@using Microsoft.AspNetCore.Authorization
@inject ApplicationDbContext Context
@inject IJSRuntime JS
@inject IWebHostEnvironment Environment

<PageTitle>Reportes - AlmaTrack</PageTitle>

<script>
    window.descargarSinVentanas = (url) => {
        const iframe = document.createElement('iframe');
        iframe.style.display = 'none';
        iframe.src = url;
        document.body.appendChild(iframe);
        setTimeout(() => { document.body.removeChild(iframe); }, 60000);
    }
</script>

<div style="max-width: 1400px; margin: 0 auto; padding: 20px;">

    <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 20px; padding: 30px; margin-bottom: 30px; box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3); display: flex; justify-content: space-between; align-items: center;">
        <div style="display: flex; align-items: center; gap: 20px;">

            <div style="background: white; border-radius: 15px; padding: 15px; width: 70px; height: 70px; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 15px rgba(0,0,0,0.2);">
                <svg width="40" height="40" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <linearGradient id="reportGrad" x1="0%" y1="100%" x2="0%" y2="0%">
                            <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
                            <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
                        </linearGradient>
                    </defs>
                    <!-- Gráfico de barras -->
                    <rect x="15" y="60" width="15" height="30" fill="url(#reportGrad)" rx="3" />
                    <rect x="35" y="45" width="15" height="45" fill="url(#reportGrad)" rx="3" />
                    <rect x="55" y="30" width="15" height="60" fill="url(#reportGrad)" rx="3" />
                    <rect x="75" y="20" width="15" height="70" fill="url(#reportGrad)" rx="3" />

                    <path d="M 20 65 L 42 50 L 62 35 L 82 25" stroke="#4caf50" stroke-width="3" fill="none" stroke-linecap="round" />
                    <circle cx="20" cy="65" r="4" fill="#4caf50" />
                    <circle cx="42" cy="50" r="4" fill="#4caf50" />
                    <circle cx="62" cy="35" r="4" fill="#8bc34a" />
                    <circle cx="82" cy="25" r="4" fill="#8bc34a" />
                </svg>
            </div>

            <div style="color: white;">
                <h1 style="margin: 0; font-size: 2.2rem; font-weight: 800;">Reportes de Inventario</h1>
                <p style="margin: 5px 0 0 0; opacity: 0.9; font-size: 1rem;">Análisis y exportación de datos</p>
            </div>
        </div>

        <div style="display: flex; flex-direction: column; gap: 10px;">
            <button @onclick="GenerarExcel" disabled="@cargando"
                    style="background: rgba(255,255,255,0.25); backdrop-filter: blur(10px); border: 2px solid rgba(255,255,255,0.4); color: white; padding: 12px 28px; border-radius: 12px; font-weight: 700; cursor: pointer; opacity: @(cargando ? 0.7 : 1); min-width: 200px; transition: all 0.3s; box-shadow: 0 4px 15px rgba(0,0,0,0.2);">
                @if (cargando)
                {
                    <span>⏳ Generando...</span>
                }
                else if (urlDescarga != null)
                {
                    <span>🔄 Generar Nuevo</span>
                }
                else
                {
                    <span>📊 Exportar Excel</span>
                }
            </button>

            @if (!string.IsNullOrEmpty(urlDescarga))
            {
                <button @onclick="IniciarDescarga"
                        style="background: #4caf50; color: white; padding: 10px 28px; border: none; border-radius: 12px; font-weight: 700; cursor: pointer; box-shadow: 0 4px 15px rgba(76, 175, 80, 0.4); transition: all 0.3s; animation: slideDown 0.3s ease;">
                    ⬇️ Descargar Archivo
                </button>
            }
        </div>
    </div>

    @if (cargandoDatos)
    {
        <div style="text-align: center; padding: 80px; background: white; border-radius: 20px; box-shadow: 0 4px 20px rgba(0,0,0,0.08);">
            <div style="font-size: 4rem; margin-bottom: 20px; animation: spin 2s linear infinite;">⏳</div>
            <p style="font-size: 1.3rem; color: #666; font-weight: 600;">Cargando reporte...</p>
        </div>
    }
    else
    {

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-bottom: 30px;">

            <div style="background: white; padding: 30px; border-radius: 20px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); border-left: 5px solid #2196f3; position: relative; overflow: hidden; transition: transform 0.3s;">
                <div style="position: absolute; top: 15px; right: 15px; opacity: 0.15; font-size: 4rem;">📦</div>
                <div style="position: relative; z-index: 1;">
                    <div style="color: #666; font-size: 0.9rem; font-weight: 600; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px;">Total Productos</div>
                    <div style="font-size: 3rem; font-weight: 800; color: #2196f3; line-height: 1;">@productos.Count</div>
                    <div style="margin-top: 10px; padding-top: 10px; border-top: 2px solid #f0f0f0;">
                        <span style="font-size: 0.85rem; color: #999;">Registrados en sistema</span>
                    </div>
                </div>
            </div>


            <div style="background: white; padding: 30px; border-radius: 20px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); border-left: 5px solid #4caf50; position: relative; overflow: hidden; transition: transform 0.3s;">
                <div style="position: absolute; top: 15px; right: 15px; opacity: 0.15; font-size: 4rem;">✅</div>
                <div style="position: relative; z-index: 1;">
                    <div style="color: #666; font-size: 0.9rem; font-weight: 600; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px;">Productos Activos</div>
                    <div style="font-size: 3rem; font-weight: 800; color: #4caf50; line-height: 1;">@productos.Count(p => p.Activo)</div>
                    <div style="margin-top: 10px; padding-top: 10px; border-top: 2px solid #f0f0f0;">
                        <span style="font-size: 0.85rem; color: #999;">@(productos.Count > 0 ? Math.Round((productos.Count(p => p.Activo) * 100.0 / productos.Count), 1) : 0)% del total</span>
                    </div>
                </div>
            </div>


            <div style="background: white; padding: 30px; border-radius: 20px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); border-left: 5px solid #f44336; position: relative; overflow: hidden; transition: transform 0.3s;">
                <div style="position: absolute; top: 15px; right: 15px; opacity: 0.15; font-size: 4rem;">⚠️</div>
                <div style="position: relative; z-index: 1;">
                    <div style="color: #666; font-size: 0.9rem; font-weight: 600; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px;">Bajo Stock</div>
                    <div style="font-size: 3rem; font-weight: 800; color: #f44336; line-height: 1;">@productos.Count(p => p.Stock <= p.StockMinimo)</div>
                    <div style="margin-top: 10px; padding-top: 10px; border-top: 2px solid #f0f0f0;">
                        <span style="font-size: 0.85rem; color: #999;">Requieren reposición</span>
                    </div>
                </div>
            </div>


            <div style="background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%); padding: 30px; border-radius: 20px; box-shadow: 0 4px 20px rgba(255, 152, 0, 0.3); position: relative; overflow: hidden; transition: transform 0.3s; color: white;">
                <div style="position: absolute; top: 15px; right: 15px; opacity: 0.2; font-size: 4rem;">💰</div>
                <div style="position: relative; z-index: 1;">
                    <div style="font-size: 0.9rem; font-weight: 600; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px; opacity: 0.95;">Valor Total Inventario</div>
                    <div style="font-size: 2.5rem; font-weight: 800; line-height: 1;">RD$@productos.Sum(p => p.Stock * p.PrecioCompra).ToString("N2")</div>
                    <div style="margin-top: 10px; padding-top: 10px; border-top: 2px solid rgba(255,255,255,0.3);">
                        <span style="font-size: 0.85rem; opacity: 0.9;">Costo total de stock</span>
                    </div>
                </div>
            </div>
        </div>


        <div style="background: white; border-radius: 20px; padding: 30px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); margin-bottom: 25px;">
            <h3 style="margin: 0 0 20px 0; color: #333; font-size: 1.3rem; display: flex; align-items: center; gap: 10px;">
                <span style="font-size: 1.8rem;">🔍</span>
                Filtros de Búsqueda
            </h3>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 20px;">
                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 700; color: #555; font-size: 0.9rem;">Categoría</label>
                    <select @bind="categoriaSeleccionada" style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 10px; cursor: pointer; font-size: 0.95rem; transition: all 0.3s;">
                        <option value="0">🏷️ Todas las categorías</option>
                        @foreach (var cat in categorias)
                        {
                            <option value="@cat.Id">@cat.Nombre</option>
                        }
                    </select>
                </div>

                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 700; color: #555; font-size: 0.9rem;">Estado Stock</label>
                    <select @bind="filtroStock" style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 10px; cursor: pointer; font-size: 0.95rem; transition: all 0.3s;">
                        <option value="">📊 Todos los niveles</option>
                        <option value="bajo">⚠️ Bajo Stock</option>
                        <option value="sin">❌ Sin Stock</option>
                        <option value="normal">✅ Stock Normal</option>
                    </select>
                </div>

                <div>
                    <label style="display: block; margin-bottom: 8px; font-weight: 700; color: #555; font-size: 0.9rem;">Estado Producto</label>
                    <select @bind="filtroActivo" style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 10px; cursor: pointer; font-size: 0.95rem; transition: all 0.3s;">
                        <option value="">📦 Todos los estados</option>
                        <option value="true">✅ Activos</option>
                        <option value="false">🔒 Inactivos</option>
                    </select>
                </div>

                <div style="display: flex; align-items: flex-end;">
                    <button @onclick="AplicarFiltros" style="width: 100%; background: linear-gradient(135deg, #667eea, #764ba2); color: white; padding: 12px; border: none; border-radius: 10px; font-weight: 700; cursor: pointer; font-size: 1rem; transition: all 0.3s; box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);">
                        🔍 Aplicar Filtros
                    </button>
                </div>
            </div>
        </div>


        <div style="background: white; border-radius: 20px; overflow: hidden; box-shadow: 0 4px 20px rgba(0,0,0,0.08);">
            @if (!productosFiltrados.Any())
            {
                <div style="text-align: center; padding: 60px;">
                    <div style="font-size: 5rem; margin-bottom: 20px; opacity: 0.3;">📭</div>
                    <p style="color: #666; font-size: 1.2rem; font-weight: 600;">No hay productos que coincidan con los filtros</p>
                    <button @onclick="@(() => { categoriaSeleccionada = 0; filtroStock = ""; filtroActivo = ""; AplicarFiltros(); })"
                            style="margin-top: 20px; background: #667eea; color: white; padding: 10px 20px; border: none; border-radius: 8px; cursor: pointer; font-weight: 600;">
                        🔄 Limpiar Filtros
                    </button>
                </div>
            }
            else
            {
                <div style="overflow-x: auto;">
                    <table style="width: 100%; border-collapse: collapse; min-width: 900px;">
                        <thead style="background: linear-gradient(135deg, #1e90ff, #2196f3); color: white;">
                            <tr>
                                <th style="padding: 18px; text-align: left; font-weight: 700; font-size: 0.95rem;">Código</th>
                                <th style="padding: 18px; text-align: left; font-weight: 700; font-size: 0.95rem;">Producto</th>
                                <th style="padding: 18px; text-align: left; font-weight: 700; font-size: 0.95rem;">Categoría</th>
                                <th style="padding: 18px; text-align: left; font-weight: 700; font-size: 0.95rem;">Stock</th>
                                <th style="padding: 18px; text-align: left; font-weight: 700; font-size: 0.95rem;">P. Compra</th>
                                <th style="padding: 18px; text-align: left; font-weight: 700; font-size: 0.95rem;">P. Venta</th>
                                <th style="padding: 18px; text-align: left; font-weight: 700; font-size: 0.95rem;">Valor Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in productosFiltrados)
                            {
                                <tr style="border-bottom: 1px solid #f0f0f0; transition: background 0.2s;"
                                    onmouseover="this.style.background='#f8f9fa'"
                                    onmouseout="this.style.background='white'">
                                    <td style="padding: 16px;"><strong style="color: #667eea;">@p.Codigo</strong></td>
                                    <td style="padding: 16px; font-weight: 600;">@p.Nombre</td>
                                    <td style="padding: 16px;">
                                        <span style="padding: 6px 14px; border-radius: 20px; font-size: 0.85rem; font-weight: 700; background: linear-gradient(135deg, #e3f2fd, #bbdefb); color: #1976d2;">
                                            @p.Categoria.Nombre
                                        </span>
                                    </td>
                                    <td style="padding: 16px;">
                                        <span style="padding: 6px 14px; border-radius: 20px; font-size: 0.85rem; font-weight: 700; @GetColorStock(p)">
                                            @p.Stock @p.Unidad
                                        </span>
                                    </td>
                                    <td style="padding: 16px; color: #666;">RD$@p.PrecioCompra.ToString("N2")</td>
                                    <td style="padding: 16px; color: #666;">RD$@p.PrecioVenta.ToString("N2")</td>
                                    <td style="padding: 16px;"><strong style="color: #ff9800; font-size: 1.05rem;">RD$@((p.Stock * p.PrecioCompra).ToString("N2"))</strong></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div style="padding: 25px; background: linear-gradient(to right, #f8f9fa, #e9ecef); border-top: 3px solid #667eea;">
                    <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px;">
                        <div>
                            <span style="font-weight: 700; color: #333; font-size: 1rem;">Total de productos:</span>
                            <span style="background: #667eea; color: white; padding: 5px 15px; border-radius: 20px; margin-left: 10px; font-weight: 700;">@productosFiltrados.Count</span>
                        </div>
                        <div>
                            <span style="font-weight: 700; color: #333; font-size: 1rem;">Valor Total:</span>
                            <span style="color: #ff9800; font-size: 1.5rem; font-weight: 800; margin-left: 10px;">RD$@productosFiltrados.Sum(p => p.Stock * p.PrecioCompra).ToString("N2")</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    select:focus {
        outline: none;
        border-color: #667eea !important;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    button:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.15) !important;
    }

    button:active {
        transform: translateY(0);
    }

    /* Hover en cards */
    div[style*="transition: transform 0.3s"]:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.12) !important;
    }
</style>

@code {
    private List<Producto> productos = new List<Producto>();
    private List<Producto> productosFiltrados = new List<Producto>();
    private List<Categoria> categorias = new List<Categoria>();

    private int categoriaSeleccionada = 0;
    private string filtroStock = "";
    private string filtroActivo = "";

    private bool cargandoDatos = true;
    private bool cargando = false;
    private string? urlDescarga = null;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargandoDatos = true;

        try
        {
            productos = await Context.Productos
                .Include(p => p.Categoria)
                .OrderBy(p => p.Nombre)
                .ToListAsync();

            categorias = await Context.Categorias
                .Where(c => c.Activo)
                .OrderBy(c => c.Nombre)
                .ToListAsync();

            productosFiltrados = productos;
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al cargar datos: {ex.Message}");
        }

        cargandoDatos = false;
    }

    private void AplicarFiltros()
    {
        productosFiltrados = productos;

        if (categoriaSeleccionada > 0)
        {
            productosFiltrados = productosFiltrados.Where(p => p.CategoriaId == categoriaSeleccionada).ToList();
        }

        if (!string.IsNullOrEmpty(filtroStock))
        {
            if (filtroStock == "bajo")
            {
                productosFiltrados = productosFiltrados.Where(p => p.Stock > 0 && p.Stock <= p.StockMinimo).ToList();
            }
            else if (filtroStock == "sin")
            {
                productosFiltrados = productosFiltrados.Where(p => p.Stock == 0).ToList();
            }
            else if (filtroStock == "normal")
            {
                productosFiltrados = productosFiltrados.Where(p => p.Stock > p.StockMinimo).ToList();
            }
        }

        if (!string.IsNullOrEmpty(filtroActivo))
        {
            bool activo = filtroActivo == "true";
            productosFiltrados = productosFiltrados.Where(p => p.Activo == activo).ToList();
        }

        urlDescarga = null;
    }

    private string GetColorStock(Producto p)
    {
        if (p.Stock == 0) return "background: linear-gradient(135deg, #f44336, #d32f2f); color: white;";
        if (p.Stock <= p.StockMinimo) return "background: linear-gradient(135deg, #ff9800, #f57c00); color: white;";
        return "background: linear-gradient(135deg, #4caf50, #388e3c); color: white;";
    }

    private async Task GenerarExcel()
    {
        cargando = true;
        urlDescarga = null;
        StateHasChanged();

        try
        {
            string carpetaDescargas = Path.Combine(Environment.WebRootPath, "descargas");
            if (!Directory.Exists(carpetaDescargas)) Directory.CreateDirectory(carpetaDescargas);

            try
            {
                foreach (var f in new DirectoryInfo(carpetaDescargas).GetFiles())
                    if (f.CreationTime < DateTime.Now.AddMinutes(-30)) f.Delete();
            }
            catch { }

            string nombreArchivo = $"Reporte_Inventario_{DateTime.Now:yyyyMMdd_HHmmss}.xlsx";
            string rutaFisica = Path.Combine(carpetaDescargas, nombreArchivo);

            await Task.Run(() =>
            {
                using var workbook = new XLWorkbook();
                var worksheet = workbook.Worksheets.Add("Inventario");

                worksheet.Cell(1, 1).Value = "Código";
                worksheet.Cell(1, 2).Value = "Producto";
                worksheet.Cell(1, 3).Value = "Categoría";
                worksheet.Cell(1, 4).Value = "Stock";
                worksheet.Cell(1, 5).Value = "Unidad";
                worksheet.Cell(1, 6).Value = "P. Compra";
                worksheet.Cell(1, 7).Value = "P. Venta";
                worksheet.Cell(1, 8).Value = "Valor Total";

                var headerRange = worksheet.Range(1, 1, 1, 8);
                headerRange.Style.Font.Bold = true;
                headerRange.Style.Fill.BackgroundColor = XLColor.FromHtml("#667eea");
                headerRange.Style.Font.FontColor = XLColor.White;
                headerRange.Style.Alignment.Horizontal = XLAlignmentHorizontalValues.Center;

                int row = 2;
                foreach (var p in productosFiltrados)
                {
                    worksheet.Cell(row, 1).Value = p.Codigo;
                    worksheet.Cell(row, 2).Value = p.Nombre;
                    worksheet.Cell(row, 3).Value = p.Categoria.Nombre;
                    worksheet.Cell(row, 4).Value = p.Stock;
                    worksheet.Cell(row, 5).Value = p.Unidad;
                    worksheet.Cell(row, 6).Value = p.PrecioCompra;
                    worksheet.Cell(row, 7).Value = p.PrecioVenta;
                    worksheet.Cell(row, 8).Value = p.Stock * p.PrecioCompra;

                    worksheet.Cell(row, 6).Style.NumberFormat.Format = "\"RD$\"#,##0.00";
                    worksheet.Cell(row, 7).Style.NumberFormat.Format = "\"RD$\"#,##0.00";
                    worksheet.Cell(row, 8).Style.NumberFormat.Format = "\"RD$\"#,##0.00";
                    row++;
                }

                worksheet.Cell(row, 7).Value = "TOTAL:";
                worksheet.Cell(row, 7).Style.Font.Bold = true;
                worksheet.Cell(row, 8).Value = productosFiltrados.Sum(p => p.Stock * p.PrecioCompra);
                worksheet.Cell(row, 8).Style.NumberFormat.Format = "\"RD$\"#,##0.00";
                worksheet.Cell(row, 8).Style.Font.Bold = true;

                worksheet.Columns().AdjustToContents();
                workbook.SaveAs(rutaFisica);
            });

            urlDescarga = $"/descargas/{nombreArchivo}";
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task IniciarDescarga()
    {
        if (!string.IsNullOrEmpty(urlDescarga))
        {
            await JS.InvokeVoidAsync("descargarSinVentanas", urlDescarga);
        }
    }
}